@model LevelUpMarket.Models.Game

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Intro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Intro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Story)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Story)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OfflinePlayEnable)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OfflinePlayEnable)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Available)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Available)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Developer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Developer.Name)
        </dd>
        <dd class="col-sm-10">
        @foreach(var p in Model.Plateformes){
                
                @Html.DisplayFor(model => p.Name)
        }
        </dd>
        <dd class="col-sm-10">
            @foreach (var p in Model.Genders)
            {

                @Html.DisplayFor(model => p.Name)
            }
        </dd>
        <dd class="col-sm-10">
            @foreach (var p in Model.Subtitles)
            {

                @Html.DisplayFor(model => p.Name)
            }

        </dd>
        <dd class="col-sm-10">

            @foreach (var p in Model.VoiceLanguages)
            {

                @Html.DisplayNameFor(p => p.Name)
            }
        </dd>
        <dd class="col-sm-10">
            @foreach (var p in Model.Images)
            {

                <img src="/@p.ImageUrl" alt="Game Image" style="width: 100px; height: 100px;" />

            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
