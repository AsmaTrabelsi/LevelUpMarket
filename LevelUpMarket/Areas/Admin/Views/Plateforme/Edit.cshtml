@model Plateforme

<form method="post" asp-action="Edit">
        <input asp-for="Id" hidden />
    <div class="border p-2 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit @Model.Name</h2>
        </div>
        </div>
        <div class="mb-3 p-2">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
