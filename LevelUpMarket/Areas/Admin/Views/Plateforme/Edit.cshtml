        </div>

    <button type="submit" class="btn btn-primary m-2" style="width:150px">
           Update
       </button>
       <a asp-controller="Plateforme" asp-action="Index" class="btn btn-secondary" style="width:150px">
           Back to List
       </a>
    </>
</form>

