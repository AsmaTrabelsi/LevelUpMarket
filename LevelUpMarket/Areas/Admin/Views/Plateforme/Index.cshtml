@model IEnumerable<Plateforme>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-2">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Plateforme List</h2>
        </div>
        <div class="col-6 text-end" style="padding-right: 100px;">
            <a asp-controller="Plateforme" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Gender
            </a>
        </div>
    </div>
</div>
<br /><br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <th>
            Plateforme Id
        </th>
        <th>
            Plateforme Name
        </th>

    </thead>
    <tbody>
        @foreach(var plateforme in Model){
            <tr>
                <td width="30%">
                    @plateforme.Id
                </td>
                <td width="40%">
                    @plateforme.Name
                </td>
                <td class="w-75 btn-group d-flex justify-content-center" role="group">
                   <div class="w-75 btn-group" role="group">
                        <a class="btn btn-primary mx-2" asp-controller="Plateforme" asp-action="Edit" asp-route-id="@plateforme.Id">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a class="btn btn-danger mx-2" asp-controller="Plateforme" asp-action="Delete" asp-route-id="@plateforme.Id">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                   </div>
                </td>
            </tr>
        }
    </tbody>
</table>

