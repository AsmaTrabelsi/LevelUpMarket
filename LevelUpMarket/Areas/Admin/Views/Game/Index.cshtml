@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Game List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Game" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Game
            </a>
        </div>
    </div>
</div>
<br />
<br />

<table id="tblData" class="table table-bordered table-striped" style="width:100%" >
  <thead>
    <tr>
       <th>Poster</th>
      <th>Name</th>
      <th>Game Intro</th>
      <th>Story</th>
      <th>Date</th>
      <th>Price</th>
      <th>Offline</th>
      <th>Available</th>
       <th>Developer</th>
       <th></th>
    </tr>
  </thead>
</table>


@section Scripts{
    <script src="~/js/game.js"></script>
}