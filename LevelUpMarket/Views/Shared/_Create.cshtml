@model Gender

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create New Gender</h2>
        </div>
        <div asp-validation-summary="All"></div>
        </div>
        <div class="mb-3 p-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
      
       <button type="submit" class="btn btn-primary m-2" style="width:150px">
           Create
       </button>
       <a asp-controller="Gender" asp-action="Index" class="btn btn-secondary" style="width:150px">
           Back to List
       </a>
    </>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

